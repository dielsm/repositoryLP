    public void check() {
        try {
            if (!f.exists()) {
                jlInfo.setText("Login: root    |    Password: 1234");
                User u = new User();
                u.setLogin("root");
                u.setPassword("@!%#");
                library = ALManager.getInstance();
                library.getUsers().put("root", u);
                ALManager.persistLibrary(f);
            }
            if (f.exists()) {
                ALManager.loadLibrary(f);
                library = ALManager.getInstance();
                Collection<User> users = library.getUsers().values();
                if (users.size() > 1) {
                    User us = library.getUsers().get("root");
                    System.out.println(us.getPassword());
                    if (us.getPassword().equalsIgnoreCase("@!%#")) {
                        library.getUsers().remove("root");
                        ALManager.persistLibrary(f);
                    }
                }
            }
        } catch (Exception e) {
            LogErros.gravarArquivo(e);
        }
    }

