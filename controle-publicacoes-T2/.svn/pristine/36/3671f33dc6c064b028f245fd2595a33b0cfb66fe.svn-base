    /**
     * Quando ocorrer este evento então surgirá uma janela com questionamento
     * sobre a saida do usuário do sistema.
     *
     * @param evt Captura ação sobre botão Cancel
     */
    private void jbCancelMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jbCancelMouseClicked
        int result = JOptionPane.showConfirmDialog(this, "Voce quer realmente sair?", "Pergunta", JOptionPane.YES_NO_OPTION);
        if (result == JOptionPane.YES_OPTION) {
            System.exit(0);
        }
    }//GEN-LAST:event_jbCancelMouseClicked

    /**
     * Quando este evento ocorrer então será lido o arquivo do disco contendo os
     * usuários. Também se aplica a comparação para saber se existem usuários
     * com os dados digitados nos campos.
     *
     * @param evt Captura de ação sobre o botão Validade.
     */
    private void jbValidateMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jbValidateMouseClicked
        try {
            try {
                ALManager.loadLibrary(f);
            } catch (IOException ex) {
                System.out.println(ex.getMessage());
            } catch (ClassNotFoundException ex) {
                System.out.println(ex.getMessage());
            }

            String login = jtfLogin.getText();
            String senha = new String(jpfPassword.getPassword());
            String passwor = Encrypt.cripto(senha);
            library = ALManager.getInstance();

            User u = library.getUsers().get(login);
            if (library.getUsers().containsKey(login)) {
                if (u.getPassword().equalsIgnoreCase(passwor)) {
                    MainWindowForm j = new MainWindowForm();
                    j.setVisible(true);
                    this.dispose();
                } else {
                    JOptionPane.showMessageDialog(this, "Login e/ou Senha Incorretos", "Aviso", JOptionPane.OK_OPTION);
                    jtfLogin.setText("");
                    jtfLogin.requestFocus();
                    jpfPassword.setText("");
                }
            } else {
                JOptionPane.showMessageDialog(this, "Login e/ou Senha Incorretos", "Aviso", JOptionPane.OK_OPTION);
                jtfLogin.setText("");
                jtfLogin.requestFocus();
                jpfPassword.setText("");
            }
        } catch (Exception e) {
            LogErros.gravarArquivo(e);
        }

    }//GEN-LAST:event_jbValidateMouseClicked

    private void jpfPasswordKeyPressed(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_jpfPasswordKeyPressed
        if (evt.getKeyCode() == KeyEvent.VK_ENTER) {
            jbValidateMouseClicked(null);
        }
    }//GEN-LAST:event_jpfPasswordKeyPressed

